<div class="content-box">
  <div class="content-box__row">
      <% shipping_rates.each do |rate| %>
          <%= form.label :selected_shipping_rate_id, value: rate.id, class: "radio-wrapper" do %>
            <div class="radio-input">
              <%= form.radio_button(:selected_shipping_rate_id, rate.id, class: "input-radio") %>
              <span class="radio__label radio__label__primary"><%= "#{rate.name}" %></span>
              <span class="radio__label radio__label__accessory"><%= "#{rate.display_cost}" %></span>
            </div>
          <% end %>
      <% end %>
    
  </div>
</div>